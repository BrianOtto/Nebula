                    <Grid Columns="1*,1*" Margin="0,0,0,15">
                        <HeaderText Value="Public Servers" Color="Nebula.Color.TextDark" />

                        <StackPanel Orientation="Horizontal" ItemSpacing="8" Alignment="Right">
                            <HeaderTextIcon Value="&#xF0FE;" Alignment="Center" />
                            <NormalTextBold Value="Add Server" Alignment="Center" />
                        </StackPanel>
                    </Grid>

                    <StackPanel ItemSpacing="15">
                        <WidgetServer Domain="ssb.exitsystemcall.com" Status="Online" LastOnline="Now" />
