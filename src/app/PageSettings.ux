<Page ux:Class="PageSettings">
    <Router ux:Dependency="router" />
    
    <DockPanel>
        <StackPanel Dock="Top" Orientation="Horizontal" Padding="15,20,15,0" ItemSpacing="7">
            <HeaderTextIcon Value="&#xF013;" Color="Nebula.Color.TextDark" />
            <HeaderText Value="Settings" Color="Nebula.Color.TextDark" />
        </StackPanel>
        
        <ScrollView Padding="15,20,15,0">
            <StackPanel ItemSpacing="20">
