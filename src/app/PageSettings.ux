                    <Image File="../lib/nebula/images/avatar-large.png" Height="130" Width="130" Alignment="TopLeft" StretchMode="UniformToFill">
                        <Rectangle Layer="Background">
                            <Stroke Width="1" Color="Nebula.Color.TextDark" />
                            
                            <Rectangle Layer="Background" Margin="1">
                                <Stroke Width="3" Color="Nebula.Color.TextLight" />
