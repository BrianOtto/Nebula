                    </Image>

                    <StackPanel ItemSpacing="7">
                        <HeaderText Value="Test User" Color="Nebula.Color.TextHighlight" />

                        <StackPanel Orientation="Horizontal" ItemSpacing="4">
                            <StackPanel Padding="0,0,0,4">
                                <NormalText Value="15" Alignment="Right" />
                                <NormalText Value="123" Alignment="Right" />
                                <NormalText Value="42" Alignment="Right" />
                            </StackPanel>

                            <StackPanel>
                                <NormalTextBold Value="Threads" Alignment="Left" />
                                <NormalTextBold Value="Replies" Alignment="Left" />
                                <NormalTextBold Value="Messages" Alignment="Left" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel ItemSpacing="2">
                            <StackPanel Orientation="Horizontal" ItemSpacing="8">
                                <HeaderTextIconSmall Value="&#xF06E;" Alignment="Center" />
                                <NormalTextBold Value="View Your Threads" Alignment="Center" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" ItemSpacing="8">
                                <HeaderTextIconSmall Value="&#xF0E0;" Alignment="Center" />
                                <NormalTextBold Value="View Your Messages" Alignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

